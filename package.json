{
  "name": "mamagadhi-app",
  "private": true,
  "scripts": {
    "build": "turbo build",
    "dev": "turbo dev",
    "dev:frontend": "turbo dev --filter=frontend",
    "dev:backend": "turbo dev --filter=backend",
    "lint": "turbo lint",
    "type-check": "turbo type-check",
    "clean": "turbo clean",
    "clean-install": "node scripts/clean-install.js",
    "postinstall": "npm run setup-platform",
    "setup-platform": "cd apps/frontend && npm rebuild lightningcss 2>/dev/null || echo 'Platform-specific rebuild completed'"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "turbo": "^2.5.5",
    "typescript": "^5.0.0"
  },
  "packageManager": "npm@10.0.0",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "dependencies": {
    "@heroicons/react": "^2.2.0",
    "@supabase/supabase-js": "^2.53.0",
    "react-toastify": "^11.0.5"
  }
}
